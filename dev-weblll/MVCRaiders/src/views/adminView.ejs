<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <title>Raiders Academy - Admin</title>
</head>

<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fs-4" href="#">Raiders Academy</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link fs-3" aria-current="page" href="/">Home</a>
                    <a class="nav-link fs-3 active" href="/admin">Admin</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="card shadow-lg p-4 rounded-4" style="background-color: #e3f2fd;">
            <div class="card-body">
                <h1 class="text-center mb-4">Área do Administrador</h1>
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-primary">
                        <tr>
                            <th scope="col">Nome</th>
                            <th scope="col">Email</th>
                            <th scope="col" class="text-center">Ação</th>
                        </tr>
                    </thead>
                    <tbody class="table-primary">
                        <% cadastros.forEach(cadastro => { %>
                        <tr>
                            <td><%= cadastro.nome %></td>
                            <td><%= cadastro.email %></td>
                            <td class="text-center">
                                <form action="/admin/delete" method="POST" style="display:inline;">
                                    <input type="hidden" name="email" value="<%= cadastro.email %>">
                                    <button type="submit" class="btn btn-danger">Excluir</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>

                <div class="mt-4 text-center">
                    <% if (typeof total !== 'undefined') { %>
                    <p><strong>Total de cadastros:</strong> <%= total %></p>
                    <% } %>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <a href="/admin/totalCadastros" role="button" class="btn btn btn-info me-2">Total Cadastros</a>
                    <a href="/" role="button" class="btn btn-primary">Voltar</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>